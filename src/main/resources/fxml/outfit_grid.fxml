<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx">

    <HBox>
        <GridPane vgap="10">
            <ScrollPane prefWidth="890" prefHeight="800" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <HBox>
                    <Pane prefWidth="10"/>
                    <VBox>
                        <Pane prefHeight="10"/>
                        <GridPane fx:id="gridPane" vgap="10" hgap="10"/>
                        <Pane prefHeight="10"/>
                    </VBox>
                    <Pane prefWidth="10"/>
                </HBox>
            </ScrollPane>
            <VBox fx:id="paginationPane" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        </GridPane>
        <Pane prefWidth="20"/>
        <VBox>
            <Label fx:id="infoLabel" maxWidth="220" wrapText="true"/>
            <Pane prefHeight="20"/>
            <Button fx:id="outfitEditButton" text="Edit" visible="false"/>
            <Pane prefHeight="20"/>
            <Button fx:id="outfitDeleteButton" text="Delete" visible="false"/>
        </VBox>
    </HBox>

</HBox>
