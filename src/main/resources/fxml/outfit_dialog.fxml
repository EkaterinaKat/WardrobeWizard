<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx">

    <Pane prefHeight="30"/>

    <HBox>
        <Pane prefWidth="30"/>

        <Pane styleClass="black_border" fx:id="collagePane"/>

        <Pane prefWidth="30"/>

        <VBox maxWidth="310">
            <Button fx:id="componentAddButton" text=" + "/>
            <Pane prefHeight="20"/>
            <TextArea fx:id="commentTextArea" wrapText="true" maxWidth="270" minWidth="270" maxHeight="250"
                      minHeight="250"/>
            <Pane prefHeight="20"/>
            <ComboBox fx:id="seasonsComboBox"/>
            <Pane prefHeight="20"/>
            <Button text="Save" fx:id="saveButton"/>
        </VBox>

        <Pane prefWidth="30"/>
    </HBox>


</VBox>
